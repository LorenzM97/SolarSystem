<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Solarsystem Editor" Height="342" Width="616">



    <Grid Margin="0,0,2,0">
        <Grid.Background>
            <ImageBrush ImageSource="images/Galaxie.png" Opacity="0.9"/>
        </Grid.Background>
        <ScrollViewer HorizontalAlignment="Left" Height="292" Margin="10,10,0,0" VerticalAlignment="Top" Width="160">
            <TreeView Name="treeView" Height="282" Width="140">
                <TreeViewItem Name="system0" Header="Solarsystem" MouseLeftButtonUp="TreeViewItem_MouseDoubleClick">
                    <TreeViewItem Name="sun0" Header="Sun" MouseLeftButtonUp="TreeViewItem_MouseDoubleClick"/>
                </TreeViewItem>
            </TreeView>
        </ScrollViewer>
        <Grid HorizontalAlignment="Left" Height="292" Margin="175,10,0,0" VerticalAlignment="Top" Width="421">
            <Label Content="Name: " HorizontalAlignment="Left" Margin="44,28,0,0" VerticalAlignment="Top" Height="27" Width="44" Background="#99284299" Foreground="White" FontWeight="Bold"/>
            <TextBox Name="tBHeader" HorizontalAlignment="Left" Height="23" Margin="93,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <Label Name="lblPosition" Content="Position" HorizontalAlignment="Left" Margin="44,72,0,0" VerticalAlignment="Top" Height="26" Width="55" Background="#99284299" Foreground="White" FontWeight="Bold"/>
            <Label Name="lblX" Content="X:" HorizontalAlignment="Left" Margin="70,98,0,0" VerticalAlignment="Top" Height="22" Width="29" Background="#99284299" Foreground="#FFECECEC" FontWeight="Bold"/>
            <TextBox Name="tBX" HorizontalAlignment="Left" Height="23" Margin="93,97,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30"/>
            <Label Name="lblY" Content="Y:" HorizontalAlignment="Left" Margin="70,120,0,0" VerticalAlignment="Top" Height="23" Width="29" Foreground="#FFF3F1F1" Background="#99284299" FontWeight="Bold"/>
            <TextBox Name="tBY" HorizontalAlignment="Left" Height="23" Margin="93,120,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30"/>
            <Label Name="lblDistance" Content="Distance to parent: " HorizontalAlignment="Left" Margin="216,76,0,0" VerticalAlignment="Top" Height="27" Width="123" Foreground="#FFD8D0D0" Background="{x:Null}" FontWeight="Bold"/>
            <TextBox Name="tBDistance" HorizontalAlignment="Left" Height="23" Margin="339,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30"/>
            <Button Name="buttonAdd" Content="Add Planet" HorizontalAlignment="Left" Margin="228,225,0,0" VerticalAlignment="Top" Width="79" Height="37" Click="buttonAdd_Click"/>
            <Button Content="Save Changes" HorizontalAlignment="Left" Margin="111,225,0,0" VerticalAlignment="Top" Width="91" Height="37" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
